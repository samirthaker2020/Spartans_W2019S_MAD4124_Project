<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyclerdemo">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <application

        android:allowBackup="true"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_appicon"
        android:label="MyNotes"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.ViewNotes"
            android:parentActivityName=".Controller.NotesDetails"></activity>
        <activity android:name=".Controller.Splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controller.MainActivity" />
        <activity
            android:name=".Controller.Addnotes"
            android:exported="true"
            android:parentActivityName=".Controller.NotesDetails" />
        <activity
            android:name=".Controller.NotesDetails"
            android:parentActivityName=".Controller.MainActivity" />
    </application>

</manifest>